
include ../config.mk

JAR_JBRIEGEL=.build/jbriegel.jar

all:	build

build:	$(JAR_JBRIEGEL)

$(JAR_JBRIEGEL):
	@UNITOOL_SCRIPT_PKG_CONFIG_FIXUP="$(UNITOOL_SCRIPT_PKG_CONFIG_FIXUP)" \
	 UNITOOL_SCRIPT_RUN_UNITOOL=$(UNITOOL_SCRIPT_RUN_UNITOOL) \
	 UNITOOL_SCRIPT_RUN_LIBTOOL=$(UNITOOL_SCRIPT_RUN_LIBTOOL) \
	 JMETUX_CLASSPATH="$(JMETUX_CLASSPATH)" \
	    ant

install:	build
	@echo "Installing to: $(DESTDIR)::$(BRIEGEL_DATADIR)/briegel"
	@mkdir -p $(BRIEGEL_DATADIR)/briegel
	@cp $(JAR_JBRIEGEL) $(DESTDIR)$(JAR_RT_JBRIEGEL)

clean:
	@rm -Rf .build
